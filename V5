  <script>
    const STORAGE_KEY = "ponyExpressDemoRequests";

    function loadRequests() {
      try {
        const raw = localStorage.getItem(STORAGE_KEY);
        if (!raw) return [];
        const parsed = JSON.parse(raw);
        return Array.isArray(parsed) ? parsed : [];
      } catch {
        return [];
      }
    }

    function saveRequests(reqs) {
      localStorage.setItem(STORAGE_KEY, JSON.stringify(reqs));
    }

    function renderRequests(mode) {
      const listEl = document.getElementById("requestList");
      const emptyStateEl = document.getElementById("emptyState");
      const countEl = document.getElementById("requestCount");

      const panelTitle = document.getElementById("panelTitle");
      const panelTag = document.getElementById("panelTag");

      const requests = loadRequests();

      countEl.textContent = requests.length.toString();

      if (mode === "rider") {
        panelTitle.textContent = "Your haul requests (Rider view)";
        panelTag.textContent = "You see everything you‚Äôve created";
      } else {
        panelTitle.textContent = "Available jobs (Hauler view)";
        panelTag.textContent = "In a real app, filtered by your lane";
      }

      listEl.innerHTML = "";

      if (!requests.length) {
        emptyStateEl.style.display = "block";
        return;
      }

      emptyStateEl.style.display = "none";

      requests.forEach((req, idx) => {
        const card = document.createElement("div");
        card.className = "request-card";

        const left = document.createElement("div");
        const route = document.createElement("div");
        route.className = "req-route";
        route.textContent = req.pickup + " ‚Üí " + req.dropoff;

        const meta = document.createElement("div");
        meta.className = "req-meta";
        meta.textContent =
          (req.date || "Flexible window") +
          " ¬∑ " +
          (req.horses || "1") +
          (req.horses === "1" ? " horse" : " horses");

        const badgesRow = document.createElement("div");
        badgesRow.className = "req-badge-row";

        const openBadge = document.createElement("span");
        openBadge.className = "req-status-pill";
        openBadge.textContent = req.status || "Open";

        badgesRow.appendChild(openBadge);

        if (req.contact) {
          const contactBadge = document.createElement("span");
          contactBadge.className = "req-badge";
          contactBadge.textContent = "Rider: " + req.contact;
          badgesRow.appendChild(contactBadge);
        }

        const notes = document.createElement("div");
        notes.className = "req-notes";
        notes.textContent = req.special || "No special notes added.";

        left.appendChild(route);
        left.appendChild(meta);
        left.appendChild(badgesRow);
        left.appendChild(notes);

        const right = document.createElement("div");
        right.className = "req-actions";

        // In rider mode, allow ‚Äúreset to open‚Äù & ‚Äúdelete‚Äù
        if (mode === "rider") {
          const resetBtn = document.createElement("button");
          resetBtn.className = "ghost-btn";
          resetBtn.textContent = "Set as Open";
          resetBtn.onclick = () => {
            const updated = loadRequests();
            if (updated[idx]) {
              updated[idx].status = "Open";
              saveRequests(updated);
              renderRequests("rider");
            }
          };

          const deleteBtn = document.createElement("button");
          deleteBtn.className = "ghost-btn";
          deleteBtn.textContent = "Delete";
          deleteBtn.onclick = () => {
            const updated = loadRequests();
            updated.splice(idx, 1);
            saveRequests(updated);
            renderRequests("rider");
          };

          right.appendChild(resetBtn);
          right.appendChild(deleteBtn);
        } else {
          // Hauler mode: ‚ÄúQuote‚Äù and ‚ÄúMark booked‚Äù
          const quoteBtn = document.createElement("button");
          quoteBtn.className = "ghost-btn";
          quoteBtn.textContent = "Mark as quoted";
          quoteBtn.onclick = () => {
            const updated = loadRequests();
            if (updated[idx]) {
              updated[idx].status = "Quoted (hauler)";
              saveRequests(updated);
              renderRequests("hauler");
            }
          };

          const bookBtn = document.createElement("button");
          bookBtn.className = "ghost-btn";
          bookBtn.textContent = "Mark as booked";
          bookBtn.onclick = () => {
            const updated = loadRequests();
            if (updated[idx]) {
              updated[idx].status = "Booked";
              saveRequests(updated);
              renderRequests("hauler");
            }
          };

          right.appendChild(quoteBtn);
          right.appendChild(bookBtn);
        }

        card.appendChild(left);
        card.appendChild(right);
        listEl.appendChild(card);
      });
    }

    function setMode(mode) {
      const buttons = document.querySelectorAll(".mode-button");
      buttons.forEach((btn) => {
        if (btn.dataset.mode === mode) {
          btn.classList.add("active");
        } else {
          btn.classList.remove("active");
        }
      });

      const riderFormCard = document.getElementById("riderFormCard");
      const haulerInfoCard = document.getElementById("haulerInfoCard");

      if (mode === "rider") {
        riderFormCard.style.display = "block";
        haulerInfoCard.style.display = "none";
      } else {
        riderFormCard.style.display = "none";
        haulerInfoCard.style.display = "block";
      }

      renderRequests(mode);
    }

    document.addEventListener("DOMContentLoaded", () => {
      const form = document.getElementById("haulForm");
      const statusEl = document.getElementById("formStatus");
      const modeToggle = document.getElementById("modeToggle");

      form.addEventListener("submit", (e) => {
        e.preventDefault();
        statusEl.textContent = "";
        statusEl.className = "status-message";

        const pickup = document.getElementById("pickup").value.trim();
        const dropoff = document.getElementById("dropoff").value.trim();
        const date = document.getElementById("date").value.trim();
        const horses = document.getElementById("horses").value.trim();
        const special = document.getElementById("special").value.trim();
        const contact = document.getElementById("contact").value.trim();

        if (!pickup || !dropoff) {
          statusEl.textContent = "Pickup and dropoff are required.";
          statusEl.classList.add("status-error");
          return;
        }

        const newReq = {
          pickup,
          dropoff,
          date,
          horses: horses || "1",
          special,
          contact,
          status: "Open",
          createdAt: new Date().toISOString()
        };

        const current = loadRequests();
        current.unshift(newReq);
        saveRequests(current);

        form.reset();
        document.getElementById("horses").value = "1";

        statusEl.textContent = "Request created (demo only, stored in your browser).";
        statusEl.classList.add("status-success");

        renderRequests("rider");
      });

      modeToggle.addEventListener("click", (e) => {
        const target = e.target.closest(".mode-button");
        if (!target) return;
        const newMode = target.dataset.mode;
        if (!newMode) return;
        setMode(newMode);
      });

      // initial
      setMode("rider");
    });
  </script>
</body>
</html>
